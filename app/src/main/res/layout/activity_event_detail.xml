<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="isEvent"
            type="com.example.rft_2.model.MyEvent" />

    </data>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            >
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/pink1"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="@{isEvent.eventName}"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    android:textStyle="bold|normal" />

                <View
                    android:background="@android:color/darker_gray"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <ImageView
                    android:id="@+id/img"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:imageUrl="@{isEvent.eventPoster}"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    />

                <View
                    android:background="@android:color/darker_gray"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <TableRow android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:padding="5dp"
                    >

                <ImageView
                    android:id="@+id/imageAddEventSummary"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/ic_baseline_event_note_24"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="1dp"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Event Description:"
                    style="@style/create_event_text_views"
                    />

                </TableRow>

                <TextView
                    android:id="@+id/info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:padding="12dp"
                    android:gravity="start"
                    android:text="@{isEvent.eventSummary}"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold|normal"
                    android:background="@color/grey"/>

                <View
                    android:background="@android:color/darker_gray"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>


                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_gravity="center"
                    >

                    <ImageView
                        android:id="@+id/imageAddEventDate"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/ic_baseline_event_24"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="1dp"
                        android:layout_marginBottom="1dp"
                        android:layout_marginRight="5dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Event Date : "
                        android:textStyle="bold"
                        android:textSize="16sp"

                        />

                    <TextView
                        android:id="@+id/tv_eventDate"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content"
                        android:text="@{isEvent.eventDate}"
                        style="@style/create_event_text_views"
                        />


                </TableRow>

                <View
                    android:background="@android:color/darker_gray"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            app:srcCompat="@drawable/ic_baseline_access_time_24"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="1dp"
                            android:layout_marginBottom="1dp"
                            android:layout_marginRight="5dp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Starts at: "
                            android:textStyle="bold"

                            />

                        <TextView
                            android:id="@+id/tv_eventStartTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{isEvent.eventStartTime}"
                            style="@style/event_details_text_views"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" Hrs"
                            android:textStyle="bold"
                            />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            app:srcCompat="@drawable/ic_baseline_access_time_filled_24"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="1dp"
                            android:layout_marginBottom="1dp"
                            android:layout_marginRight="5dp"

                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ends at: "
                            android:textStyle="bold"
                            />
                        <TextView
                            android:id="@+id/tv_eventEndingTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{isEvent.eventEndingTime}"
                            style="@style/event_details_text_views"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" Hrs"
                            android:textStyle="bold"

                            />

                    </LinearLayout>


                </LinearLayout>

                <View
                    android:background="@android:color/darker_gray"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="20dp"
                    android:weightSum="1"
                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/ic_baseline_local_offer_24"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="1dp"
                        android:layout_marginBottom="1dp"
                        android:layout_marginRight="5dp"

                        />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content"
                        android:text="Ticket Price: "
                        style="@style/event_details_text_views"

                        />
                    <TextView
                        android:id="@+id/tv_TicketPrice"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content"
                        android:text="@{isEvent.eventTicketPrice}"
                        />

                </LinearLayout>

                <View
                    android:background="@android:color/darker_gray"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <TableRow android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:padding="5dp"
                    >

                    <ImageView
                        android:id="@+id/imageAddEventLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/ic_baseline_location_on_24"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="1dp"
                        android:layout_marginBottom="1dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/create_event_text_views"
                        android:text="Event Location "
                        />

                </TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Click the link to view"
                    />

                <com.google.android.material.textfield.TextInputLayout
                    android:padding="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/venue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:autoLink="web"
                        android:layout_gravity="start"
                        android:textIsSelectable="true"
                        android:padding="12dp"
                        android:gravity="start"
                        android:text="@{isEvent.eventVenue}"
                         />
                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="20dp"
                    android:weightSum="1"
                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/ic_baseline_account_circle_24"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="1dp"
                        android:layout_marginBottom="1dp"
                        android:layout_marginRight="5dp"

                        />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.25"
                        android:layout_height="wrap_content"
                        android:text="Organizer: "
                        style="@style/event_details_text_views"
                        />

                    <TextView
                        android:id="@+id/tv_Organizers"
                        android:layout_width="0dp"
                        android:layout_weight="0.75"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:gravity="end"
                        android:text="@{isEvent.eventOrganizer}"
                        />

                </LinearLayout>



                <View
                    android:background="@android:color/darker_gray"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <Button
                    android:id="@+id/btn_book_event"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:background="@color/pink1"
                    android:text="Book Event"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    />

                <ProgressBar

                    android:id="@+id/progressbar"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:indeterminateOnly="false"
                    android:progress="0"
                    android:progressDrawable="@drawable/circularprogressbar"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <TextView

                    android:id="@+id/text_progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30%"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="@+id/progressbar"
                    app:layout_constraintEnd_toEndOf="@+id/progressbar"
                    app:layout_constraintStart_toStartOf="@+id/progressbar"
                    app:layout_constraintTop_toTopOf="@+id/progressbar" />

                <TableRow android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_Ticket"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="20dp"
                    android:padding="5dp"
                    android:gravity="center"
                    android:visibility="invisible"
                    >

                    <ImageView
                        android:id="@+id/booked"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_baseline_bookmark_added_24"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="1dp"
                        android:layout_marginBottom="1dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/create_event_text_views"
                        android:textStyle="bold"
                        android:textSize="24sp"
                        android:text="Ticket Reserved  "
                        />

                </TableRow>

                <LinearLayout
                    android:id="@+id/admin_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="invisible"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/edit_event"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:background="@color/pink1"
                        android:text="Edit"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        />

                    <Button
                        android:id="@+id/cancel_event"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:background="@color/pink1"
                        android:text="Cancel Event"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        />
                </LinearLayout>

            </LinearLayout>

        </ScrollView>

</layout>